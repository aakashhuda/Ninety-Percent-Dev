                    </a>
                </div>
                <div class="np-column np-col-1">
                    <a href="{{ block.settings.cta-link-1 }}">
                        <img alt="{{ block.settings.image-1.alt }}" src="{{ block.settings.image-1 | img_url: 'master' }}">
                        <span class="np-black">{{ block.settings.cta-label-1 }}</span>
                    </a>
                </div>
                <div class="np-column np-col-1">
                    <a href="{{ block.settings.cta-link-2 }}">
                        <img alt="{{ block.settings.image-2.alt }}" src="{{ block.settings.image-2 | img_url: 'master' }}">
                        <span>{{ block.settings.cta-label-2 }}</span>
                    </a>
                </div>
            </div>
            <div class="np-row">
                <div class="np-column np-col-1">
                    <a href="{{ block.settings.cta-link-1-s }}">
                        <img alt="{{ block.settings.image-1-s.alt }}" src="{{ block.settings.image-1-s | img_url: 'master'  }}">
                        <span>{{ block.settings.cta-label-1-s }}</span>
                    </a>
                </div>
