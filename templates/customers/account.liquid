  font-size: 70px;
  line-height: 75px;
  letter-spacing: -0.01em;
}
.np-h3 {
  font-size: 26px;
  line-height: 36px;
  letter-spacing: -0.01em;
}
.np-h4 {
  font-size: 20px;
  line-height: 30px;
  letter-spacing: -0.01em;
}
