  	{% when 'double_column_section' %}
		{% capture image_layout %}
			<div class="np-column np-col-2">
            	<img alt="sweats" src="{{ block.settings.image | img_url: 'master' }}">
            </div>
		{% endcapture %}
  		<section class="np-container np-spring"><!-- np-vertical-content -->
            <div class="np-row">
              	{% if block.settings.layout == 'left' %}
              		{{ image_layout }}
            	{% endif %}
                <div class="np-column np-col-2 np-content-block">
                    <div>
                        <h2>{{ block.settings.title }}</h2>
                        <p class="desktop-content">{{ block.settings.text }}</p>
                        <a href="{{ block.settings.cta-link }}" class="link">{{ block.settings.cta-label }}</a>
                    </div>
                </div>
                {% if block.settings.layout == 'right' %}
                	{{ image_layout }}
                {% endif %}
            </div>
        </section>
  	{% when 'grid_section' %}
  		<section id="np-grid-section" class="np-container">
            <div class="np-row np-grid-header">
                <div class="np-column np-col-4">
                    <h2>{{ block.settings.title }}</h2>
                    <h3>{{ block.settings.subtitle }}</h3>
                </div>
            </div>
            <div class="np-row">
