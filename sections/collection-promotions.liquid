          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
<script>
  (function atPollForjQueryMbileNav() {
    if (window.jQuery !== undefined) {
        var $ = window.jQuery;
      var url = window.location.href;
      const queryString = window.location.search;
      const urlParams = new URLSearchParams(queryString);
      const collectionAdd = urlParams.get('utm_campaign');
      if($('#shopify-section-collection-promotions .np-promotion-container .items h1').text().trim() ==="AW20"){
            // Display the message
            document.getElementById('shopify-section-collection-promotions').style.display = "none";
        }
        if($('#shopify-section-collection-promotions .np-promotion-container .items h1:contains(AW20)') && (collectionAdd === 'Aw20Purple' || collectionAdd === 'Aw20BlackandWhite' || collectionAdd === 'Aw20Red')){
          document.getElementById('shopify-section-collection-promotions').style.display = "block";
         }
} else {
        setTimeout(atPollForjQueryMbileNav, 25);
    }
})();
</script>