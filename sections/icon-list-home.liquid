{% style %}
.logo-bar--{{ section.id }} {
  opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }};
}


{% endstyle %}

{% if section.settings.divider %}<div class="section--divider">{% endif %}

<div class="page-width" data-aos="logo__animation">
  {% if section.settings.title != blank %}
    <div class="section-header logo-block_home">
      <h2 class="section-header__title">{{ section.settings.title | escape }}</h2>
      <p class="">{{ section.settings.desc}}</p>
      {% if section.settings.show_desc_btn %}
        <div class="logo-block_desc_btn"><a class="rs-btn" href="{{ section.settings.desc_btn_link }}">{{ section.settings.desc_btn_txt }}</a></div>
      {% endif %}
      
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="logo-bar logo-bar--{{ section.id }}">
      {% for block in section.blocks %}
        <div class="logo-bar__item_icons" {{ block.shopify_attributes }}>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="logo-bar__link">
          {% endif %}
          {% if block.settings.image != blank %}
            {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="logo-bar__image lazyload"
                data-src="{{ img_url }}"
                data-widths="[180, 360, 540, 720]"
                data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ block.settings.image.alt }}"
                width="100%"
                height="{{ block.settings.image.aspect_ratio }}*{{ width }}"
              >
          <p>{{ block.settings.title }}</p>
          {% else %}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% if section.settings.divider %}</div>{% endif %}
<style>

.logo-block_home p{
  font-size: 16px;
  padding-top: 15px;
}
.section-header.logo-block_home {
    max-width: 700px;
    margin: 0 auto;
}
.logo-block_home.section-header__title {
    padding: 20px 0px;
}

  .logo-block_desc_btn {
  padding: 35px 0px;
}
  .rs-btn{
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: underline;
  }

  .logo-bar__item_icons {
    -ms-flex: 0 1 130px;
    flex: 0 1 130px;
    vertical-align: middle;
    margin: 0 5px 10px;
}
  .logo-block_home + .logo-bar .logo-bar__item_icons p {
  	font-size: 14px;
    padding-top: 10px;
    line-height: 1.3;
  }
 @media only screen and (min-width: 769px) {   
  .logo-bar__item_icons {
  		-ms-flex: 0 1 200px;
		flex: 0 1 215px;
		margin: 0 15px 30px;
  }
   .logo-bar__item_icons p {
  	font-size: 16px;
  }
   
 }
  .logo-bar__item_icons img[data-sizes="auto"]{
  	width: 80%;
  }
  
  </style>
{% schema %}
  {
    "name": "Icon Block Home",
    "class": "index-section",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "FOR THE WORLD WE WANT"
      },
      {
        "type": "textarea",
        "id": "desc",
        "label": "Description",
        "default": "Weâ€™re a collective reinvesting 90% of our profits back into the people."
      },
      {
        "type": "range",
        "id": "logo_opacity",
        "label": "Icons opacity",
        "default": 76,
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "%"
      },
      {
        "type": "checkbox",
        "id": "show_desc_btn",
        "label": "Show Description Button",
        "default": true
      },
      {
        "type": "text",
        "id": "desc_btn_txt",
        "label": "Button Title",
        "default": "DISCOVER OUR WAY"
      },
      {
        "type": "url",
        "id": "desc_btn_link",
        "label": "Buton Link"
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Icons",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "info": "Optional"
          },
		  {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Icon Block Home",
        "category": "Image",
        "blocks": [
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
