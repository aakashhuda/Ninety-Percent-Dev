{% for block in section.blocks %}
    {% case block.type %}
        {% when 'hero-about-us' %} 
            <div id="wrapper-{{ block.id }}"> 
                <section class="about-us-{{ block.id }} page-width">
                    <div class="text-{{ block.id }}">
                        <h1 class="title-{{ block.id }}">{{ block.settings.header-title }}</h1>
                        <div class="description-{{ block.id }}">
                            <p>{{ block.settings.description }}</p>
                        </div>
                        <div class="history-description-{{ block.id }}">
                            <p>{{ block.settings.history-description }}</p>
                        </div>
                    </div>
                    <div class="image-container-{{ block.id }}">
                        <img src="{{ block.settings.image | img_url: "master" }}">
                    </div>
                </section>
            </div>

        {% when 'spacer' %}
            <section class="custom-spacer-{{ block.id }}">

            </section>
    {% endcase %}
{% endfor %}
<div class="hr-parent-{{ section.id }}">
    <hr class="hr-{{ section.id }}">
</div>
<style>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'hero-about-us' %}
                #wrapper-{{ block.id }} {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }
                .about-us-{{ block.id }} {
                    display: flex;
                    justify-content: space-evenly;
                    align-items: stretch;
                    width: {{ block.settings.block-width }}%;
                }
                .text-{{ block.id }} {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    width: 50%;
                }
                .text-{{ block.id }} h1 {
                    margin-bottom: 28px;
                    margin-top: 16px;
                }
                .image-container-{{ block.id }} {
                    display: flex;
                    justify-content: center;
                    width: 50%;
                }
                .title-{{ block.id }} {
                    font-size: {{ block.settings.title-font-size }}px;
                    font-family: 'Silvana';
                    color: #2B2725;
                }
                .description-{{ block.id }} {
                    font-size: 26px;
                    color: #000000;
                    font-size: {{ block.settings.description-font-size }}px;
                    line-height: 36px;
                    font-family: 'Silvana';
                    width: {{ block.settings.description-width }}%;
                }
                .history-description-{{ block.id }} {
                    font-size: {{ block.settings.history-font-size }}px;
                    line-height: 28px;
                    color: #000000;
                    font-family: 'Intervogue';
                    width: {{ block.settings.history-width }}%;
                    text-align: justify;
                }
                .hr-parent-{{ section.id }}{
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                } 
                hr.hr-{{ section.id }} {
                    display: none;
                    width: 93%;
                    margin: 1rem 0;
                }
                @media (max-width: 768px) {
                    .about-us-{{ block.id }} {
                        flex-wrap: wrap;
                    }
                    .about-us-{{ block.id }}.page-width {
                      padding: 0;
                    }
                    .text-{{ block.id }}{
                        order: 1;
                        width: 90%;
                    }
                    .image-container-{{ block.id }} {
                        order: 0;
                    }
                    .description-{{ block.id }} p {
                        margin: 0;
                    }
                    .title-{{ block.id }} {
                        font-size: {{ block.settings.title-mobile-font-size }}px;
                        color: #2B2725;
                    }
                    .description-{{ block.id }} {
                        font-size: {{ block.settings.description-mobile-font-size }}px;
                        color: #2B2725;
                        line-height: 22px;
                        width: {{ block.settings.description-mobile-width }}%;
                        {% comment %} width: {{ block.settings.description-width }}%; {% endcomment %}
                    }

                    .description-{{ block.id }} {
                        font-size: 16px;
                        text-align: justify;
                        letter-spacing: -0.01em;
                        line-height: 23px;
                    }
                    .history-description-{{ block.id }} {
                        display: none;
                    }
                    .image-container-{{ block.id }} {
                        width: 100%;
                    }
                    .image-container-{{ block.id }} img {
                        width: 100%;
                    }
                    .about-us-{{ block.id }} {
                        width: 100%;
                    }
                    hr.hr-{{ section.id }} {
                        display: block;
                    }
                }
            {% when 'spacer' %}
                .custom-spacer-{{ block.id }} {
                    height: {{ block.settings.spacer }}px;
                }
        {% endcase %}
    {% endfor %}
</style>

