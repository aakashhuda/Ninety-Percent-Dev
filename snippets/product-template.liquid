      $('body').addClass('show-size-guide-pdp');
    }
    
    if ($(this).hasClass("drawer-material-pdp")) {
      $('body').addClass('show-drawer-material-pdp');
    }
    e.preventDefault();
    $('.pdp-drawer-wrapper').addClass("pdp-drawer-open");
    $('.cart-window-bg').addClass("window-show");
    if (!$('body').hasClass('pdp-drawer-is-open')) {
      $('body').addClass('pdp-drawer-is-open');
    }
  })

  function closeDrawer(){
    document.querySelector('.pdp-drawer-close').click();
  }
  document.querySelector('.cart-window-bg').addEventListener('click', closeDrawer);

  
</script>