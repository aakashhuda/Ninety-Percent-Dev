
{% for block in section.blocks %}
  {% case block.type %}

	{% when 'spring_hero_section' %}
		<section id="np-hero-spring"class="hero-spring-banner">
          <div class="np-col-first np-col-special-first">
          	<img alt="{{ block.settings.image.alt }}" class="np-spring-img" src="{{ block.settings.image | img_url: 'master' }}">
            <div>
                   <h1><span class="np-mobile-only">A sense <br>of adventure</span></h1>
            </div>
          </div>
          <div class="np-col-second">
              <div class="np-col-second-box">
                  <div class="np-col-second-title">
                      <h2>{{ block.settings.title1 }}</h2>
                  </div>
                  <div class="np-col-second-desc">
                      <p>{{ block.settings.text }}</p>
                  </div>
                  <div class="np-col-second-link">
                      <a class="link" href="{{ block.settings.link }}">{{ block.settings.cta-label }}</a>
                  </div>
              </div>
          </div>	
		</section>
	{% when 'sale_section' %}
		<section class="np-sale-fullwidth">
          <a href="{{ block.settings.sale-link }}">
            <div class="home-sale-banner ">
              <div class="home-sale-banner-col-1">
                {{ block.settings.sale }}
              </div>
              <div class="home-sale-banner-col-2">
                <h3>{{ block.settings.sale_sub_heading }}</h3>
				<div class="sale-mobile"> 
                  <h2 style="display: block;">Shop sale season Responsibilty.</h2>
                  <h2>Get our sustainable pieces with up to 70% off.</h2>
                </div>
              </div>
            </div>
          </a>
        </section>
    {% when 'hero_section' %}
    	<section id="np-hero-section" class="np-container">
            <div class="np-row">
                <div class="np-column np-col-special-first">
                    <img alt="{{ block.settings.image.alt }}" src="{{ block.settings.image | img_url: 'master' }}" />
                    <div>
                        <h1><span>{{ block.settings.title1 }} </span><span class="np-mobile-only">{{ block.settings.title2 }}</span></h1>
                    </div>
                </div>
                <div class="np-column np-col-special-second np-content-block">
                    <div>
                        <h1 class="np-desktop-only">{{ block.settings.title2 }}</h1>
                        <p>{{ block.settings.text }}</p>
                        <a href="{{ block.settings.cta-link }}">{{ block.settings.cta-label }}</a>
                      {% style %}
                          @media (min-width: 769px){
                              #np-hero-section .np-column.np-col-special-second > div h1 {
                                  color:{{ block.settings.title2_color }};
                                  font-size: 58px;
                                  line-height: 64px;
								}
                          }  
					{% endstyle %}
                    </div>
                </div>
            </div>
        </section>
    {% when 'fake_banner_section' %}
		{% if block.settings.image != blank %}
			<style>
              @media only screen and (min-width: 769px) {
                #np-fake-banner {
                  background-image: url("{{ block.settings.image | img_url: 'master' }}");
                }
              }
            </style>
		{% endif %}
		{% if block.settings.image-mobile != blank %}
			<style>
              @media only screen and (max-width: 768px) {
                #np-fake-banner {
                  background-image: url("{{ block.settings.image-mobile | img_url: 'master' }}");
                }
              }
            </style>
		{% endif %}
  		<section id="np-fake-banner" class="np-container np-container-fullwidth">
            <div class="np-row np-content-block">
                <div class="np-column">
                    <h2>{{ block.settings.title }} </h2>
                </div>
                <div class="np-column">
                    <p>{{ block.settings.text }}</p>
                </div>
                <div class="np-column">
                    <a href="{{ block.settings.link }}" class="link">{{ block.settings.cta-label }}</a>
                </div>
            </div>
        </section>
