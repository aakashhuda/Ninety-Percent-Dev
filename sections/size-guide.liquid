{% style %}
    .np-page-width {
        max-width: 1440px;
        margin: 0 auto;
    }

    @media(max-width: 768px) {
        .np-page-width {
            padding: 0 20px;
        }
    }
    .size-guide-page table, .size-guide-page th, .size-guide-page td {
        border: 0.25px solid rgba(43, 39, 37, 0.5);
        border-top: none;
        border-right: none;
        border-left: none;
        border-collapse: collapse;
    }
    .size-guide-page td {
        padding: 17px 0;
        text-align: center;
        width: 42px;
    }
    .size-guide-page td.not-first-row {
        padding-top: 18px;
        padding-bottom: 25px;
        /* text-align: center; */
        width: 42px;
    }
    .size-guide-page td.col0, .size-guide-page td.col0.not-first-row {
        width: 70px;
        text-align: left;
        padding-left: 22px;
    }
    .size-guide-page table {
        max-width: 605px;
    }
    .size-guide-page .custom-page-title {
        margin-bottom: 70px;
    }
    .size-guide-page .custom-subtitle {
        font-family: 'Intervogue';
        font-style: normal;
        font-weight: 400;
        font-size: 12.5px;
        line-height: 21px;
        letter-spacing: 0.05em;
        color: #2B2725;
        padding-bottom: 12px;
        border-bottom: 1px solid #2B2725;
        width: 581px;
        margin-bottom: 17px;
    }
    .size-guide-page .custom-message {
        margin-bottom: 50px;
    }
    .size-guide-page .custom-message a, .size-guide-page .sojo-message a {
        text-decoration: underline;
    }
    .size-guide-page .size-guide-table {
        margin-bottom: 57px;
    }
    .size-guide-page .sojo-message {
        width: 607px;
    }

{% endstyle %}

