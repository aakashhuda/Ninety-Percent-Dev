<section class="section-wrapper-{{ section.id }}">
    {% for block in section.blocks %}
      
          {% case block.type %}
          {% when 'text-block' %}
              <div class="text-block-{{ block.id }}">
            <div class="text-block-inner np-h5">{{ block.settings.text-content }}</div>
            </div>
  
          {% when 'spacer-block' %}
          <div class="spacer-{{ block.id }}">
              
          </div>
  
          {% endcase %}
      
    {% endfor %}
  </section>
  
  <style>
    .section-wrapper-{{ section.id }} {
      max-width: 1440px;
      margin: 0 auto;
  }
      {% for block in section.blocks %}
          {% case block.type %} 
  
          {% when "text-block" %}
  
            .text-block-{{ block.id }} {
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .text-block-inner {
                max-width: 576px;
                margin: 5px;
            }
            .text-block-inner p {
              margin: 0 auto;
          }

        
          .section-wrapper-{{ section.id }} .text-block-{{ block.id }} {
              text-align: center;
          }


        @media only screen and (max-width: 768px) { 
          .section-wrapper-{{ section.id }} {
      padding: 0px 20px;
  }
        }
  
          {% when "spacer-block" %}
          .section-wrapper-{{ section.id }}  .spacer-{{ block.id }} {
              height: {{ block.settings.spacer-height }}px;
          }
      {% endcase %}
      {% endfor %}
  
  
  </style>
  
  {% schema %}
  {
      "name": "Single Column Text",
      "blocks": [
          {
              "name": "text-block",
              "type": "text-block",
              "settings": [
                  
              
                  {
                   "type":"richtext",
                   "id":"text-content",
                   "label":"Change Text Block",
                   "default":"<p>We're focused on sustainable practices and materials, creating collections with longevity and circularity at their heart. But what sets us apart is our revolutionary profit sharing model, providing the tools of empowerment for everyone involved in the creation of those collections and giving back to the causes close to our heart.</p>"
                }
               
                  
              ]
          },
          {
             "type": "spacer-block",
              "name": "Spacer",
                "settings":[
                  {
                      "type": "range",
                      "id": "spacer-height",
                      "label": "Spacer Height",
                      "min": 0,
                      "max": 200,
                      "step": 5,
                      "unit": "px",
                      "default": 30
                  }
                ]
            }
      ],
      "presets": [
          {
           "category":"content",
            "name":"Single Column Text",
            "blocks": [
              {
          "type": "spacer-block"
        },
        {
          "type": "text-block"
        },
        {
          "type": "spacer-block"
        }
      ]
          }
      ]
  }
  {% endschema %} 