<section class="section-wrapper-{{ section.id }} page-width">
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'moto-text' %}
        <div class="moto-text-{{ block.id }}">
            <p>
                {{ block.settings.motoText}}
            </p>
        </div>
      {% when 'spacer-block' %}
      <div class="spacer-{{ block.id }}">
      </div>
    {% endcase %}
  {% endfor %}
</section>
<style>
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'moto-text' %}
        .moto-text-{{ block.id }} p{
            font-family: 'Silvana';
            font-style: normal;
            font-weight: 400;
            font-size: {{block.settings.font-size}}px;
            line-height: 105px;
            text-align: center;
            letter-spacing: -0.03em;
            font-feature-settings: 'ordn' on;
            color: {{ block.settings.color }};
        }
      {% when 'spacer-block' %}
      .section-wrapper-{{ section.id }} .spacer-{{ block.id }}{
        height: {{ block.settings.spacer-height }}px;
      }
    {% endcase %}
  {% endfor %}
</style>
{% schema %}
  {
    "name": "Section Spacer",
    "blocks": [
        {
        "name": "Moto Text",
        "type": "moto-text",
        "settings": [
            {"type": "text",
           "id": "motoText",
           "label":"Change the Moto Text",
           "default":"For The World We Want."
         },
         {
         "type": "range",
           "id":"font-size",
           "label":"Font Size",
           "min": 100,
           "max": 200,
           "step": 10,
           "unit": "px",
           "default": 100
         },{
         "type": "color",
           "id":"text-color",
           "label":"Text Color",
           "default": "#2B2725"
         }
        ]
        },
      {
        "name": "Spacer",
        "type": "spacer-block",
        "settings": [
          {
            "type": "range",
            "id": "spacer-height",
            "label": "Spacer Height",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "default": 30
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Moto",
        "blocks": [
          {
            "type": "moto-text"
          },
          {
            "type": "spacer-block"
          }
        ]
      }
    ]
  }
{% endschema %}