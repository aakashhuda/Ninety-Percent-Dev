<section class="section-wrapper-{{ section.id }} page-width">

    {% for block in section.blocks %}
        {% case block.type %}
            {% when "image-block" %}
                <div class="block-{{ block.id }}">
                    
                        <div class="image-block-inner" >
                            
                            <div class="image-block-text">
                                <span class="image-block-title"> {{ block.settings.title }} </span>
                                <span class="image-block-desc"> {{ block.settings.desc }} </span>
                            </div>
                           
                        </div>

                        <span class="image-block-caption"> {{ block.settings.caption }} </span>
                </div>
            
            {% when 'spacer-block' %}

                <div class="spacer-{{ block.id }}">
                        
                </div>

        {% endcase %}
    {% endfor %}

</section>

<style>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when "image-block" %}
                
                 .block-{{ block.id }} {
                    padding: 0px {{ block.settings.padding }}px;
                 }
                 .block-{{ block.id }} .image-block-inner {
                    background-image: url("{{ block.settings.bg-image | img_url: 'grande' }}");
                    width: 100%;
                    height: 940px;
                    position: relative;
                    background-repeat: no-repeat;
                    overflow: hidden;
                    background-size: cover;
                    background-position: 100% center;
                 }
                 
                 .block-{{ block.id }} .image-block-inner .image-block-text {
                    text-align: center;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    flex-direction: column;
                    margin-top: 110px;
                   
                    color: white;
                    
                 } 
             
                 .block-{{ block.id }} .image-block-inner span {
                    display: none;
                 
                    
                 }
                 .block-{{ block.id }} .image-block-text .image-block-title {
                    font-weight: 700;
                    font-size: {{ block.settings.title-text-size }}px;
                    color: {{ block.settings.title-color }};
                    font-family: "Silvana";
                    line-height: {{ block.settings.title-line-height }}px;
                 }
                 .block-{{ block.id }} .image-block-text .image-block-title p {
                    margin: 0 auto;
                 }

                 .block-{{ block.id }} .image-block-text .image-block-desc {
                    font-size: {{ block.settings.desc-text-size }}px;
                    color: {{ block.settings.desc-color }};
                    font-family: "Silvana";
                    line-height: {{ block.settings.desc-line-height }}px;
                    display: none;
                    justify-content: center;
                    margin-top: 40px;
                 }
                   .block-{{ block.id }} .image-block-text .image-block-desc p {
                    width: 60%;
                 }

                 .block-{{ block.id }} .image-block-inner .image-block-caption  {
                    font-size: {{ block.settings.caption-text-size }}px;
                    color: {{ block.settings.caption-color }};
                    font-family: "Intervogue";
                    line-height: {{ block.settings.caption-line-height }}px;
                 }
                 .block-{{ block.id }} .image-block-inner .image-block-caption p {
                    margin: 0 auto;
                 }

                 {% if block.settings.show-title %}
                    .block-{{ block.id }} .image-block-text .image-block-title {
                        display: block;
                     }
                 {% endif %}

                 {% if block.settings.show-desc %}
                    .block-{{ block.id }} .image-block-text .image-block-desc {
                        display: flex;
                     }
                 {% endif %}

                 {% if block.settings.show-caption %}
                    .block-{{ block.id }} .image-block-inner .image-block-caption {
                        display: block;
                     }
                 {% endif %}

                 @media only screen and (max-width: 768px) {
                    .block-{{ block.id }} .image-block-text .image-block-title {
                    
                        font-size: {{ block.settings.mobile-title-text-size }}px;                    
                        line-height: {{ block.settings.mobile-title-line-height }}px;
                     }
                     .block-{{ block.id }} .image-block-text .image-block-desc {
                        font-size: {{ block.settings.mobile-desc-text-size }}px;                    
                        line-height: {{ block.settings.mobile-desc-line-height }}px;
                     }
    
                     .block-{{ block.id }} .image-block-inner .image-block-caption  {
                        font-size: {{ block.settings.mobile-caption-text-size }}px;                
                        line-height: {{ block.settings.mobile-caption-line-height }}px;
                     }
                     .block-{{ block.id }} .image-block-text .image-block-desc {
                    
                       margin-top: 20px;
                 }
                 .block-{{ block.id }} .image-block-inner {
                    
                    height: 440px;
                   
                    
                  }
                  }
                
            {% when 'spacer-block' %}

                .section-wrapper-{{ section.id }}  .spacer-{{ block.id }} {
                    height: {{ block.settings.spacer-height }}px;
                }
        {% endcase %}
    {% endfor %}
</style>


