{% for block in section.blocks limit: collection_limit %}
  {% if collection_page %}
    {% if block.settings.promo_collection != blank %}
      {% if block.settings.promo_collection != collection.handle %}
        {% continue %}
      {% endif %}
    {% endif %}
  {% endif %}
  <div class="page-width">
    <div class="promotion-container np-promotion-container">
      <div class="items">
        <h1>{{collection.title}}</h1>
        <p>{{collection.description}}</p>
      </div>
      <div class="items">
          {% case block.type %}
            {% when 'image' %}
            {% if block.settings.image != blank %}
              <div class="image-wrap custom-wrap">
                {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <img class="lazyload"
                     data-src="{{ img_url }}"
                     data-widths="[360, 540, 720, 900, 1080, 1600]"
                     data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                     data-sizes="auto"
                     role="presentation"
                     alt="{{ block.settings.image.alt }}">
                <noscript>
                  <img class="lazyloaded" src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.image.alt }}">
                </noscript>
              </div>
            {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% endcase %}
      </div>
    </div>
  </div>
{% endfor %}
