                        <span class="np-black">{{ block.settings.cta-label-2-s }}</span>
                    </a>
                </div>
                <div class="np-column np-col-2">
                    <a href="{{ block.settings.featured-cta-link-s }}">
                        <img alt="{{ block.settings.featured-image-s.alt}}" src="{{ block.settings.featured-image-s | img_url: 'master' }}">
                        <span class="np-black">{{ block.settings.featured-cta-label-s }}</span>
                    </a>
                </div>
            </div>
        </section>
  	{% when 'reviews_section' %}
  		<section class="np-container">
            <div class="np-row">
                <div class="np-column np-col-4" style="display: flex;flex-wrap: wrap;justify-content: center !important;">
                  <a href="{{ block.settings.review-link }}">  <img style="display: block; width: auto; max-width: 100%; margin: 0 auto;" alt="{{ block.settings.image.alt }}" src="{{ block.settings.image | img_url: 'master' }}"></a>
                </div>
            </div>
        </section>
