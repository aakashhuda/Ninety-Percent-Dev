<section class="section-wrapper-{{ section.id }} page-width">

    {% for block in section.blocks %}
        {% case block.type %}
            {% when "double-column-text-block" %}

                <div class="block-{{ block.id }}">

                    <div class="left-text-part">
                        
                        <div class="left-text-part-inner">

                           
                            <span class="left-title"> {{ block.settings.left-title }} </span> 
                            <span class="left-desc"> {{ block.settings.left-desc }}  </span>
                            <a href="{{ block.settings.left-btn-url }}" class="left-learn-more-btn"> {{ block.settings.left-btn-text }}  </a>
                            
                            
                           
                        </div>

                        
                    </div>

                    <div class="right-text-part">

                        <div class="right-text-part-inner">

                            
                            <span class="right-title"> {{ block.settings.right-title }} </span> 
                            <span class="right-desc"> {{ block.settings.right-desc }}  </span>
                            <a href="{{ block.settings.btn-url }}" class="right-learn-more-btn"> {{ block.settings.right-btn-text }}  </a>
                            
                            
                           
                        </div>

                        
                    </div>

                </div>
            


            {% when 'spacer-block' %}

                <div class="spacer-{{ block.id }}">
                        
                </div>

        {% endcase %}
    {% endfor %}
</section>



<style>
   
    {% for block in section.blocks %}

        {% case block.type %}

            {% when "double-column-text-block" %}
                
                  .block-{{ block.id }} .left-title , .block-{{ block.id }} .left-learn-more-btn {
                    display: none;
                }
                
                .block-{{ block.id }} .right-title , .block-{{ block.id }} .right-learn-more-btn {
                    display: none;
                }
                
               



             .block-{{ block.id }}  {
                display: flex;
                justify-content: center;
                flex-direction: row;
                min-height: {{ block.settings.block-height }}px;
             }
             
             .block-{{ block.id }} .left-text-part  {
                display: flex;
                

               align-content: center;
                flex-wrap: wrap; 

                background-color: {{ block.settings.left-text-bg-color }};
                width: 50%;
                border-right: 1px solid rgba(43, 39, 37, 0.5);
             }

             .block-{{ block.id }} .right-text-part  {
                display: flex;
                

               align-content: center;
                flex-wrap: wrap; 

                background-color: {{ block.settings.right-text-bg-color }};
                width: 50%;
                
             }
             .block-{{ block.id }} .left-text-part .left-text-part-inner {
                margin: 20px auto; 
                width: 60%;
             }
             .block-{{ block.id }} .right-text-part .right-text-part-inner {
                margin: 20px auto; 
                width: 60%;
             }


             .block-{{ block.id }} .left-text-part .left-title {
    
                font-size: {{ block.settings.left-title-text-size }}px;
                color: {{ block.settings.left-title-color }};
                font-family: "Silvana";
             }

             .block-{{ block.id }} .right-text-part .right-title {
    
                font-size: {{ block.settings.right-title-text-size }}px;
                color: {{ block.settings.right-title-color }};
                font-family: "Silvana";
             }


             .block-{{ block.id }} .left-text-part .left-desc {
                font-size: {{ block.settings.left-desc-text-size }}px;
                color: {{ block.settings.left-desc-color }};
                font-family: "Intervogue";
                line-height: {{ block.settings.left-desc-line-height }}px;
             }

             .block-{{ block.id }} .right-text-part .right-desc {
                font-size: {{ block.settings.right-desc-text-size }}px;
                color: {{ block.settings.right-desc-color }};
                font-family: "Intervogue";
                line-height: {{ block.settings.right-desc-line-height }}px;
             }


           

             .block-{{ block.id }} .left-text-part .left-learn-more-btn {
                
                font-size: {{ block.settings.left-btn-text-size }}px;
               
                font-family: "Intervogue";
                
             }

             .block-{{ block.id }} .right-text-part .right-learn-more-btn {
                
                font-size: {{ block.settings.right-btn-text-size }}px;
               
                font-family: "Intervogue";
                
             }
             
             .block-{{ block.id }} .left-text-part a {
                text-decoration: none;
                color: {{ block.settings.left-btn-color }};
             }
             .block-{{ block.id }} .right-text-part a {
                text-decoration: none;
                color: {{ block.settings.right-btn-color }};
             }



             .block-{{ block.id }} .left-text-part .left-learn-more-btn p, .block-{{ block.id }} .right-text-part .right-learn-more-btn p  {
                display: inline;              
                padding-bottom: 7px;
                border-bottom: 1px solid black;
             }
               .block-{{ block.id }} .left-text-part .left-title p,   .block-{{ block.id }} .right-text-part .right-title p {
                line-height: 1em;
                margin: 0 auto;
             }
             .block-{{ block.id }} .left-text-part .left-desc p, .block-{{ block.id }} .right-text-part .right-desc p  {
                margin: 0px auto;

             }

          
             

            


             {% if block.settings.show-left-title %}
                .block-{{ block.id }} .left-title {
                    display: inline;
                }
             {% endif %}
            

        
             {% if block.settings.show-left-btn %}
                .block-{{ block.id }} .left-learn-more-btn {
                    display: inline;
                }
             {% endif %}

           





             {% if block.settings.show-right-title %}
                .block-{{ block.id }} .right-title {
                    display: inline;
                }
             {% endif %}
            

        
             {% if block.settings.show-right-btn %}
                .block-{{ block.id }} .right-learn-more-btn {
                    display: inline;
                }
             {% endif %}

           
        

             @media only screen and (max-width: 768px) {
              .block-{{ block.id }}  {
            
                align-items: center;
                flex-direction: column;
              
             }
             .block-{{ block.id }} .left-text-part  {

              border-right: 0px; 
           
           
            width: 100%;
            
         }

         .block-{{ block.id }} .right-text-part  {
         
            width: 100%;
            
         }
             
              .block-{{ block.id }} .left-text-part .left-title {
    
                font-size: {{ block.settings.mobile-left-title-text-size }}px;
           
             }

             .block-{{ block.id }} .right-text-part .right-title {
    
                font-size: {{ block.settings.mobile-right-title-text-size }}px;
             
             }


             .block-{{ block.id }} .left-text-part .left-desc {
                font-size: {{ block.settings.mobile-left-desc-text-size }}px;
                
                line-height: {{ block.settings.mobile-left-desc-line-height }}px;
             }

             .block-{{ block.id }} .right-text-part .right-desc {
                font-size: {{ block.settings.mobile-right-desc-text-size }}px;
                
                line-height: {{ block.settings.mobile-right-desc-line-height }}px;
             }


           

             .block-{{ block.id }} .left-text-part .left-learn-more-btn {
                
                font-size: {{ block.settings.mobile-left-btn-text-size }}px;
               
              
                
             }

             .block-{{ block.id }} .right-text-part .right-learn-more-btn {
                
                font-size: {{ block.settings.mobile-right-btn-text-size }}px;
               
               
                
             }
              }




            {% when "spacer-block" %}
                .section-wrapper-{{ section.id }}  .spacer-{{ block.id }} {
                    height: {{ block.settings.spacer-height }}px;
                }
            
        {% endcase %}
        
    {% endfor %}


</style>



